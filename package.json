{
  "name": "vibe-coding-game",
  "private": true,
  "version": "1.0.0",
  "description": "Multiplayer FPS game with client/server architecture",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm install && pnpm -r run build",
    "clean": "rm -rf node_modules dist tsconfig.tsbuildinfo && pnpm -r run clean",
    "clean:store": "pnpm store prune",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "workspaces": [
    "packages/*"
  ]
}
